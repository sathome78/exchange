<div class="modal fade comment" id="confirm-with-info-modal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="user_info"></h4>
            </div>
            <div class="modal-body">
                <label for="info-field">
                </label>
                <input class="form-control"
                       id="info-field"
                       readonly>
                </input>
            </div>
            <div class="modal-footer">
                <div>
                    <button class="btn btn-success" type="button" id="confirm-button">
                        <loc:message code="merchants.continue"/>
                    </button>

                    <button class="btn btn-default" type="button" data-dismiss="modal">
                        <loc:message code="admin.cancel"/>
                    </button>
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>