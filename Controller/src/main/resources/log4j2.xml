<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{dd MMM yyyy HH:mm:ss,SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <RollingFile name="Merchant" fileName="${sys:catalina.home}/logs/merchants.log"
                     filePattern="${sys:catalina.home}/logs/merchants_%d{MM-dd-yyyy}.log" append="true">
            <PatternLayout>
                <pattern>%d %p %C{1.} [%t] %m%n</pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
        <File name="Log" fileName="${sys:catalina.home}/logs/logs.log" append="true">
            <PatternLayout pattern="%d{dd MMM yyyy HH:mm:ss,SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="me.exrates" level="debug">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="Log"/>
        </Logger>
        <Logger name="me.exrates.controller.merchants">
            <AppenderRef ref="Merchant"/>
        </Logger>

    </Loggers>
</Configuration>