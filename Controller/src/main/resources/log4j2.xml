<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{dd MMM yyyy HH:mm:ss.SSS} %level [%t] %C:%M:%L - %message%n"/>
        </Console>
        <RollingFile name="Merchants" fileName="${sys:catalina.home}/logs/merchants.log"
                     filePattern="${sys:catalina.home}/logs/merchants_%d_%i.log" append="true">
            <PatternLayout pattern="%d{dd MMM yyyy HH:mm:ss.SSS} %level [%t] %C:%M:%L - %message%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
        <RollingFile name="Merchants_edr" fileName="${sys:catalina.home}/logs/merchants_edr.log"
                     filePattern="${sys:catalina.home}/logs/merchants_edr_%d_%i.log" append="true">
